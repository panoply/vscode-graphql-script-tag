{
  "name": "graphql-script-tag",
  "displayName": "GraphQL Script Tag",
  "description": "GraphQL Syntax highlighting support for html script tags using application/graphql mime type attributes.",
  "publisher": "sissel",
  "icon": "images/logo.png",
  "author": "Nikolas Savvidis <nicos@gmx.com>",
  "version": "0.1.1",
  "keywords": [
    "html",
    "script graphql tag",
    "graphql tag",
    "graphql tag html"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/panoply/vscode-graphql-script-tag.git"
  },
  "bugs": {
    "url": "https://github.com/panoply/vscode-graphql-script-tag/issues"
  },
  "engines": {
    "vscode": "^1.30.0"
  },
  "categories": [
    "Programming Languages",
    "Other"
  ],
  "contributes": {
    "grammars": [
      {
        "scopeName": "source.graphql.embedded",
        "path": "./syntax/script-graphql.embedded.json",
        "injectTo": ["text.html"],
        "embeddedLanguages": {
          "meta.embedded.block.graphql.html": "graphql"
        }
      }
    ]
  },
  "extensionDependencies": [
    "kumar-harsh.graphql-for-vscode"
  ]
}
